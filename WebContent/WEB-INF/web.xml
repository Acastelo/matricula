<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Matricula</display-name>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
    <welcome-file>login.htm</welcome-file>
    <welcome-file>login.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  
  	<error-page>
  		<error-code>500</error-code>
  		<location>/erro500.jsp</location>
  	</error-page>
  	
  	<error-page>
  		<error-code>404</error-code>
  		<location>/erro500.jsp</location>
  	</error-page>
  
  	<error-page>
   	 	<exception-type>java.io.IOException</exception-type>
  		<location>//erro500.jsp</location>
	</error-page>      
  
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>br.com.fametro.matricula.controller.LoginController</servlet-class>
	</servlet>
	
  	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
  
 	<servlet>
		<servlet-name>UsuarioController</servlet-name>
		<servlet-class>br.com.fametro.matricula.controller.UsuarioController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>UsuarioController</servlet-name>
		<url-pattern>/usuario</url-pattern>
	</servlet-mapping>
	
  
  
</web-app>